{
  "apiVersion": "v1",
  "kind": "Template",
  "metadata": {
    "name": "sample-application"
    
  },
  "labels": {
      "template": "sample-application",
      "app": "sample-application"
    },
  "objects": [
    {
      "kind": "ImageStream",
      "apiVersion": "image.openshift.io/v1",
      "metadata": {
        "labels": {
          "app": "sample-application"
        },
        "name": "sample-application"
      },
      "spec": {
        "lookupPolicy": {
          "local": false
        }
      }
    },
    {
      "kind": "BuildConfig",
      "apiVersion": "build.openshift.io/v1",
      "metadata": {
        "labels": {
          "app": "sample-application"
        },
        "name": "sample-application"
      },
      "spec": {
        "nodeSelector": null,
        "output": {
          "to": {
            "kind": "ImageStreamTag",
            "name": "sample-application:latest"
          }
        },
          "triggers": [
          {
            "type": "ImageChange"
          },
          {
            "type": "ConfigChange"
          }
        ],
        "postCommit": {
        },
        "resources": {
        },
        "serviceAccount": "builder",
        "source": {
          "git": {
            "ref": "master",
            "uri": "https://github.com/vicky1411/registrationmysql"
          },
          "type": "Git"
        },
        "strategy": {
          "sourceStrategy": {
            "from": {
              "kind": "ImageStreamTag",
              "name": "jboss-eap64-openshift:1.4",
              "namespace": "openshift"
            }
          },
          "type": "Source"
        },
        
        "triggeredBy": [
          {
            "message": "Build configuration change"
          }
        ]
      }
    },
    {
      "kind": "DeploymentConfig",
      "apiVersion": "apps.openshift.io/v1",
      "metadata": {
        "labels": {
          "app": "sample-application"
        },
        "name": "sample-application"
      },
      "spec": {
        "replicas": 2,
        "selector": {
          "deploymentconfig": "sample-application"
        },
        "triggers": [
          {
            "type": "ImageChange",
            "imageChangeParams": {
              "automatic": true,
              "containerNames": [
                "sample-application"
              ],
              "from": {
                "kind": "ImageStreamTag",
                "name": "sample-application:latest"
              }
            }
          },
          {
            "type": "ConfigChange"
          }
        ],
        "strategy": {
          "activeDeadlineSeconds": 21600,
          "resources": {
          },
          "rollingParams": {
            "intervalSeconds": 1,
            "maxSurge": "25%",
            "maxUnavailable": "25%",
            "timeoutSeconds": 600,
            "updatePeriodSeconds": 1
          },
          "type": "Rolling"
        },
        "template": {
          "metadata": {
            "creationTimestamp": null,
            "labels": {
              "app": "sample-application",
              "deploymentconfig": "sample-application"
            }
          },
          "spec": {
            "containers": [
              {
                "image": "docker-registry.default.svc:5000/cicd/sample-application:latest",
                "imagePullPolicy": "Always",
                "name": "sample-application",
                "ports": [
                  {
                    "containerPort": 8080,
                    "protocol": "TCP"
                  }
                ],
                "resources": {
                },
                "terminationMessagePath": "/dev/termination-log",
                "terminationMessagePolicy": "File"
              }
            ],
            "dnsPolicy": "ClusterFirst",
            "restartPolicy": "Always",
            "schedulerName": "default-scheduler",
            "securityContext": {
            },
            "terminationGracePeriodSeconds": 30
          }
        }
      }
    },
    {
  "apiVersion": "apps.openshift.io/v1",
  "kind": "DeploymentConfig",
  "metadata": {
    "labels": {
      "app": "mysqlk8s"
    },
    "name": "mysqlk8s",
    "namespace": "cicd"
  },
  "spec": {
    "replicas": 1,
    "selector": {
      "app": "mysqlk8s"
    },
    "template": {
      "metadata": {
        "labels": {
          "app": "mysqlk8s"
        }
      },
      "spec": {
        "containers": [
          {
            "env": [
              {
                "name": "MYSQL_ROOT_PASSWORD",
                "value": "Gslab@123"
              },
              {
                "name": "MYSQL_DATABASE",
                "value": "test"
              },
              {
                "name": "MYSQL_PASSWORD",
                "value": "passwd"
              },
              {
                "name": "MYSQL_USER",
                "value": "user1"
              }
            ],
            "image": "docker-registry.default.svc:5000/openshift/mysql@sha256:a34bbe925c220b28e11d1c5b130aa3ce28f6d95161b336f69b3c5b756542740a",
            "imagePullPolicy": "IfNotPresent",
            "name": "mysqlcontainer",
            "ports": [
              {
                "containerPort": 3306,
                "protocol": "TCP"
              }
            ]
          }
        ]
      }
    }
  }
},
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "labels": {
          "app": "sample-application"
        },
        "name": "sample-application",
        "namespace": "cicd"
      },
      "spec": {
        "ports": [
          {
            "name": "8080-tcp",
            "port": 8080,
            "protocol": "TCP",
            "targetPort": 8080
          }
        ],
        "selector": {
          "deploymentconfig": "sample-application"
        },
        "sessionAffinity": "None",
        "type": "ClusterIP"
      }
    },
    {
      "kind": "Route",
      "apiVersion": "route.openshift.io/v1",
      "metadata": {
        "labels": {
          "app": "sample-application"
        },
        "name": "sample-application",
        "namespace": "cicd"
      },
      "spec": {
        "port": {
          "targetPort": "8080-tcp"
        },
        "to": {
          "kind": "Service",
          "name": "sample-application",
          "weight": 100
        },
        "wildcardPolicy": "None"
      }
    }
  ]
}
